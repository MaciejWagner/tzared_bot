@namespace TzarBot.Dashboard.Components

<div class="stat-card @SizeClass">
    <div class="stat-icon">
        <i class="bi @Icon"></i>
    </div>
    <div class="stat-content">
        <span class="stat-label">@Label</span>
        <span class="stat-value">@Value</span>
        @if (!string.IsNullOrEmpty(Trend))
        {
            <span class="stat-trend @TrendClass">
                <i class="bi @TrendIcon"></i>
                @Trend
            </span>
        }
    </div>
</div>

@code {
    [Parameter]
    public string Label { get; set; } = "Metric";

    [Parameter]
    public string Value { get; set; } = "0";

    [Parameter]
    public string Icon { get; set; } = "bi-graph-up";

    [Parameter]
    public string? Trend { get; set; }

    [Parameter]
    public bool TrendPositive { get; set; }

    [Parameter]
    public bool Compact { get; set; }

    private string SizeClass => Compact ? "compact" : "";
    private string TrendClass => TrendPositive ? "positive" : "negative";
    private string TrendIcon => TrendPositive ? "bi-arrow-up-short" : "bi-arrow-down-short";
}

<style>
    .stat-card {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.25rem;
        background: var(--surface-card);
        border-radius: 0.75rem;
        transition: transform 0.2s ease;
    }

    .stat-card:hover {
        transform: translateY(-2px);
    }

    .stat-card.compact {
        padding: 0.75rem;
        gap: 0.75rem;
    }

    .stat-icon {
        width: 3rem;
        height: 3rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--accent-bg);
        border-radius: 0.75rem;
        color: var(--accent-color);
        font-size: 1.25rem;
    }

    .stat-card.compact .stat-icon {
        width: 2.5rem;
        height: 2.5rem;
        font-size: 1rem;
    }

    .stat-content {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .stat-label {
        font-size: 0.8rem;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
    }

    .stat-card.compact .stat-value {
        font-size: 1.25rem;
    }

    .stat-trend {
        display: flex;
        align-items: center;
        gap: 0.125rem;
        font-size: 0.8rem;
        font-weight: 500;
    }

    .stat-trend.positive {
        color: #22c55e;
    }

    .stat-trend.negative {
        color: #ef4444;
    }
</style>
